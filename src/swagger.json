{
  "openapi": "3.0.0",
  "info": {
    "title": "RentX",
    "description": "An api for Car Rental services",
    "version": "1.0.0",
    "contact": {
      "email": "arturminelli@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Creates a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "object": "Category",
                "properties": {
                  "name" : {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Example Name",
                  "description": "Example Description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Category already exists",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error" : {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "Category 'Category Name' already exists"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "Lists all of the registered categories",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Category"],
        "summary": "Imports categories from provided csv file",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specification"],
        "summary": "Creates a new specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "object": "Specification",
                "properties": {
                  "name" : {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Example Name",
                  "description": "Example Description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Specification already exists",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error" : {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "Specification 'Specification Name' already exists"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Specification"],
        "summary": "Lists all of the registered specifications",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}